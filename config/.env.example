# AWS EC2 Data Science Configuration
# Copy this file to .env and fill in your values
# .env is excluded from git by .gitignore

# AWS Configuration
AWS_DEFAULT_REGION=us-west-2

# SSH Key Configuration
# Path to your SSH private key
SSH_KEY_PATH=~/.ssh/my-datascience-key.pem
# Name of the key pair in AWS
KEY_NAME=my-datascience-key

# Security Group
SECURITY_GROUP_ID=sg-xxxxxxxx

# Instance Configuration
# AMI IDs (find latest using: aws ec2 describe-images)
CPU_AMI_ID=ami-xxxxxxxx  # Ubuntu 22.04 LTS (for CPU instances)
GPU_AMI_ID=ami-xxxxxxxx     # Deep Learning AMI (for GPU instances)

# Default instance types
DEFAULT_CPU_INSTANCE_TYPE=t3.medium
DEFAULT_GPU_INSTANCE_TYPE=g4dn.xlarge

# S3 Bucket
S3_BUCKET_NAME=my-datascience-bucket

# Elastic IP (optional)
ELASTIC_IP=1.2.3.4
ELASTIC_IP_ALLOCATION_ID=eipalloc-xxxxxxxx
ELASTIC_IP_ASSOCIATION_ID=eipassoc-xxxxxxxx

# Instance Tags
CPU_INSTANCE_NAME=datascience-daily
GPU_INSTANCE_NAME=gpu-training

# Storage (GB)
DEFAULT_CPU_VOLUME_SIZE=20
DEFAULT_GPU_VOLUME_SIZE=100
